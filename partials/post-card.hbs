<div class="mdl-card m-post-card">
    <div class="mdl-card__title">
        <a href="{{url}}">
            <h2 class="mdl-card__title-text m-post-card__title-text">{{title}}</h2>
        </a>
    </div>
    <div class="mdl-card__supporting-text m-post-card__supporting-text">
        {{excerpt words="33"}}
    </div>
    <div class="mdl-card__actions mdl-card--border m-post-card__actions">
        <span class="m-post-card__date">{{date format="YYYY-MM-DD"}}</span>
        <a class="mdl-button mdl-button--colored m-post-card__more" href="{{url}}">
            阅读全文...
        </a>
    </div>
</div>