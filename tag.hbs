{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<div class="m-pages">
    {{#tag}}
    <div class="m-tag">
        <span class="m-tag__label">标签：</span>{{name}} <span class="m-tag__desc">共计 {{plural ../pagination.total empty='posts' singular='% 篇文章' plural='% 篇文章'}}</span></div>
    {{/tag}}
    {{#foreach posts}}
        {{> "post-card"}}
    {{/foreach}}
    {{pagination}}
</div>
